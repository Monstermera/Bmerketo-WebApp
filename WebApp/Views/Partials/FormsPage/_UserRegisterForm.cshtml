@model UserRegisterViewModel
@{
    ViewData["Title"] = "Register Your new Account";
}
<section class="register-form">
    <div class="container">
        <div class="title">
            @ViewData["Title"] 
            <div class="box"></div>
        </div>

        <form method="post" enctype="multipart/form-data" novalidate onsubmit="validateForm(event);">
            <div asp-validation-summary="ModelOnly" class="form-group error"></div>

            <div class="firstName form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" id="firstName" class="form-control" onkeyup="validateText('firstName')" required />
                <small><span id="firstNameError" asp-validation-for="FirstName" class="error"></span></small>
            </div>

            <div class="lastName form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" id="lastName" onkeyup="validateText('lastName')" required />
                <small><span id="lastNameError" asp-validation-for="LastName" class="error"></span></small>
            </div>

            <div class="streetName form-group">
                <label asp-for="StreetName" class="form-label"></label>
                <input asp-for="StreetName" class="form-control" id="streetName" onkeyup="validateText('streetName')" required />
                <small><span id="streetNameError" asp-validation-for="StreetName" class="error"></span></small>
            </div>

            <div class="postalCode form-group">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" id="postalCode" onkeyup="validateText('postalCode')" required />
                <small><span id="postalCodeError" asp-validation-for=" PostalCode" class="error" id="postalCodeError"></span></small>
            </div>

            <div class="city form-group">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" id="city" onkeyup="validateText('city')" required />
                <small><span id="cityError" asp-validation-for="City" class="error"></span></small>
            </div>

            <div class="phoneNumber form-group">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control"/>
                <small><span asp-validation-for="PhoneNumber" class="error"></span></small>
            </div>

            <div class="company form-group">
                <label asp-for="Company" class="form-label"></label>
                <input asp-for="Company" class="form-control" />
                <small><span asp-validation-for="Company" class="error"></span></small>
            </div>


            <div class="email form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" id="email" onkeyup="validateEmail('email')" required />
                <small><span id="emailError" asp-validation-for="Email" class="error"></span></small>
            </div>

            <div class="password form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" id="password" onkeyup="validatePassword('password')" required />
                <small><span id="passwordError" asp-validation-for=" Password" class="error"></span></small>
            </div>

            <div class="confirmPassword form-group">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" onkeyup="validateConfirmPassword('confirmPassword')" required />
                <small><span id="confirmPasswordError" asp-validation-for="ConfirmPassword" class="error"></span></small>
            </div>

            <div class="imageUrl form-group">
                <label asp-for="ImageFile" class="form-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <small><span asp-validation-for="ImageFile" class="error"></span></small>
            </div>


            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    <label asp-for="Terms"></label>
                    <input asp-for="Terms">
                    <span class="checkmark"></span>
                </label>
                <small><span asp-validation-for="Terms" class="error"></span></small>
            </div>

            <button class="btn-theme">REGISTER</button>

        </form>
    </div>
</section>
